{% extends 'dashboard/index.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-4">
        <h1 class="text-2xl font-semibold text-gray-800">Modifier l'utilisateur</h1>
    </div>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6">
                {{ form_row(form.firstname, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_row(form.lastname, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_row(form.gender, {'attr': {'class': 'form-select mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_row(form.rgpd, {'attr': {'class': 'mt-1 block leading-tight'}}) }}

                <div class="flex items-center justify-start mt-4">
                    <button type="submit" class="inline-flex items-center gap-x-2 text-sm font-semibold text-white bg-black hover:bg-gray-800 rounded-lg px-3 py-2">
                        Enregistrer
                    </button>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="ml-4 inline-flex items-center gap-x-2 text-sm font-semibold text-white bg-gray-600 hover:bg-gray-700 rounded-lg px-3 py-2">
                        Annuler
                    </a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
