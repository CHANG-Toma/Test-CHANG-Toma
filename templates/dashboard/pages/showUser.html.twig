{% extends 'dashboard/index.html.twig' %}

{% block body %}
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-4">
            <h1 class="text-2xl font-semibold text-gray-800">Informations de l'utilisateur</h1>
        </div>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <div class="grid grid-cols-1 gap-6">
                    <div class="flex flex-col">
                        <label class="font-semibold text-gray-700">Pr√©nom</label>
                        <input type="text" value="{{ user.firstname }}" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50" readonly>
                    </div>

                    <div class="flex flex-col">
                        <label class="font-semibold text-gray-700">Nom</label>
                        <input type="text" value="{{ user.lastname }}" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50" readonly>
                    </div>

                    <div class="flex flex-col">
                        <label class="font-semibold text-gray-700">Email</label>
                        <input type="email" value="{{ user.email }}" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50" readonly>
                    </div>

                    <div class="flex flex-col">
                        <label class="font-semibold text-gray-700">Genre</label>
                        <input type="text" value="{{ user.gender }}" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50" readonly>
                    </div>

                    <div class="flex flex-col">
                        <label class="font-semibold text-gray-700">RGPD</label>
                        <input type="text" value="{{ user.rgpd ? 'Oui' : 'Non'  }}" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-300 focus:ring focus:ring-gray-200 focus:ring-opacity-50" readonly>
                    </div>
                </div>

                <div class="flex items-center mt-4">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-flex items-center gap-x-2 text-sm font-semibold text-white bg-yellow-400 hover:bg-yellow-600 rounded-lg px-3 py-2">
                        Modifier
                    </a>
                    <a href="{{ path('app_user_index') }}" class="ml-4 inline-flex items-center gap-x-2 text-sm font-semibold text-white bg-gray-600 hover:bg-gray-700 rounded-lg px-3 py-2">
                        Retour
                    </a>
                    </div>
            </div>
        </div>
	</div>
{% endblock %}
